//biblioteca

#include <stdio.h>
#include <locale.h>
#include <stdlib.h>

int main() {
    setlocale(LC_ALL, ""); 
    
    float n1, n2, media;
    int resposta;
    
    do {
        printf("Insira a primeira nota:\n");
        scanf("%f", &n1);
        printf("Insira a segunda nota:\n");
        scanf("%f", &n2);
        
        media = (n1 + n2) / 2;
        printf("A média do aluno é %.2f.\n", media);
        
        printf("Digite 1 para continuar ou 2 para sair:\n");
        scanf("%d", &resposta);
        
        system("cls"); 
        
     } while (resposta == 1);
    
    return 0;
}
