//biblioteca 

#include <stdio.h>
#include <locale.h>

int main() {
    setlocale(LC_ALL, ""); 

    float num;
    
    printf("Insira o seu número:\n");
    scanf("%f", &num); 
    
    if (num > 0) {
        printf("%.2f é positivo\n", num);
    } else if (num == 0) {
        printf("%.2f é zero\n", num); 
    } else { 
        printf("%.2f é negativo\n", num);
    }

    return 0; 
}
